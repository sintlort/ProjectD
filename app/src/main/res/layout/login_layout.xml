<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="111dp"
        android:layout_height="106dp"
        android:background="@drawable/blue_circle"
        app:srcCompat="@drawable/login_picture"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Project D"
        android:textColor="@color/whito"
        android:textSize="30dp"
        android:textStyle="bold"
        android:shadowDx="5"
        android:shadowDy="5"
        android:outlineSpotShadowColor="#000000"
        android:shadowColor="#000000"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/whito"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/inputusername"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:textColor="@color/whito"
        android:backgroundTint="@color/whito"
        android:hint="Username"
        android:textColorHint="@color/whito"
        android:drawableLeft="@drawable/login_picture"
        android:drawablePadding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/whito"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:inputType="textPassword"
        android:backgroundTint="@color/whito"
        android:textColor="@color/whito"
        android:hint="Password"
        android:textColorHint="@color/whito"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"
        android:drawablePadding="5dp"/>
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/log_in"
        android:background="@drawable/ring_button"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground" />
    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You dont have account? Register here!!"
        android:textColor="@color/whito"
        android:layout_marginTop="10dp"
        android:clickable="true"/>
</LinearLayout>