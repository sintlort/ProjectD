<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="20dp"
            android:background="#86a9dc">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/big_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngurah Doddy Pratama"
                android:textSize="20sp"
                android:textColor="@color/blackk"
                android:layout_toRightOf="@id/profile_image"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/smoll_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doddy Pratama"
                android:textSize="14sp"
                android:layout_toRightOf="@id/profile_image"
                android:layout_below="@id/big_name"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:layout_marginLeft="15dp"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Baru"/>

                <EditText
                    android:id="@+id/email_baru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Baru"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Alamat Baru"/>

            <EditText
                android:id="@+id/alamat_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat Baru"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="No Handphone Baru"/>

            <EditText
                android:id="@+id/no_handphone_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No Handphone Baru"/>

            <Button
                android:id="@+id/submit_update_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:layout_marginTop="10dp"
                android:background="#86a9dc"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>