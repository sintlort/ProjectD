<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProject"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Project"
                android:textSize="20dp"
                android:textColor="@color/blackk"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/update_nama_project"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nama Project"
                android:drawableLeft="@drawable/checkmark_register"
                android:drawablePadding="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Project"
                android:textSize="20dp"
                android:textColor="@color/blackk"
                android:layout_marginLeft="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/update_start_date"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tanggal Selesai"
                    android:drawableLeft="@drawable/black_date"
                    android:drawablePadding="20dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

                <Button
                    android:id="@+id/select_update_start_date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:textColor="@color/blackk"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Project"
                android:textSize="20dp"
                android:textColor="@color/blackk"
                android:layout_marginLeft="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/update_end_date"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tanggal Selesai"
                    android:drawableLeft="@drawable/black_date"
                    android:drawablePadding="20dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

                <Button
                    android:id="@+id/select_update_end_date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:textColor="@color/blackk"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textSize="20dp"
                android:textColor="@color/blackk"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:id="@+id/update_desc_date"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/list_desc"
                android:drawablePadding="20dp"
                android:hint="Deskripsi Project" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Hp."
                android:textSize="20dp"
                android:textColor="@color/blackk"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:id="@+id/update_no_Hproject"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/black_phone"
                android:inputType="phone"
                android:drawablePadding="20dp"
                android:hint="No HP yang dapat dihubungi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maksimal Orang"
                android:textSize="20dp"
                android:textColor="@color/blackk"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:id="@+id/update_max_orang"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Maksimal Pertisipan"
                android:drawableLeft="@drawable/black_person"
                android:inputType="number"
                android:drawablePadding="20dp"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/submit_update_project"
                android:text="Submit"
                android:textColor="@color/blackk"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>